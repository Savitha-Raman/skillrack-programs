i/p: 12
o/p: 21
i/p: 159
o/p: 519
//to find the next greatest number using the same digits of the given number
#include<stdio.h>
#include <stdlib.h>
#include<string.h>
int main()
{1
char a[17];
scanf("%s",a);
int len=strlen(a);
int i=0,j;
for(i=len-2;i>=0;i--)
{
    if(a[i]>=a[i+1])
        continue;
    else
    {
        int k=i;
        while(a[i]<a[k+1])
            k+=1;
         
        char temp=a[i];
        a[i]=a[k];
        a[k]=temp;
        for(j=0;j<=(len-i-2)/2;j++)
        {
            char temp=a[i+1+j];
            a[i+1+j]=a[len-1-j];
            a[len-1-j]=temp;
        }
        break;
    }
}
for(i=0;i<len;i++)
    printf("%c",a[i]);
return 0;
}








#include <iostream>
#include<algorithm>
  
using namespace std;
 
int main(int argc, char** argv)
{
string s;
std::cin>>s;
std::next_permutation(s.begin(),s.end());
std::cout<<s;
}






